@page
@model DrPet.Web.Pages.Admin.Treatments.EditModel

<h1>Kezelés módosítása</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Treatment.Id" />

            <div class="form-group">
                <label asp-for="Treatment.TypeId" class="control-label"></label>
                <select asp-for="Treatment.TypeId" class="form-control" asp-items="Model.TreatmentTypes"></select>
            </div>

            <div class="form-group">
                <label asp-for="Treatment.MedicineId" class="control-label"></label>
                <select asp-for="Treatment.MedicineId" class="form-control" asp-items="Model.Medicines"></select>
            </div>

            <div class="form-group">
                <label asp-for="Treatment.Comment" class="control-label"></label>
                <textarea asp-for="Treatment.Comment" class="form-control"></textarea>
                <span asp-validation-for="Treatment.Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Módosít" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Vissza a kezelések listájához</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
