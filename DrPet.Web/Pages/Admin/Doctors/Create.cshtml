@page
@model DrPet.Web.Pages.Admin.Doctors.CreateModel

<h1>Orvos rögzítése</h1>

<hr />

<div class="row">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group col-md-5 p-0">
                <label asp-for="Doctor.Name" class="control-label"></label>
                <input asp-for="Doctor.Name" class="form-control" />
                <span asp-validation-for="Doctor.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Doctor.PublicDescription" class="control-label"></label>
                <textarea asp-for="Doctor.PublicDescription" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Doctor.PublicDescription" class="text-danger"></span>
            </div>

            <div class="form-group col-md-5 p-0">
                <label asp-for="Doctor.Email" class="control-label"></label>
                <input asp-for="Doctor.Email" type="email" class="form-control" />
                <span asp-validation-for="Doctor.Email" class="text-danger"></span>
            </div>

            <div class="form-group col-md-5 p-0">
                <label asp-for="Doctor.Photo" class="control-label"></label>
                <input asp-for="Doctor.Photo" type="file" class="form-control" />
                <span asp-validation-for="Doctor.Photo" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Létrehoz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Vissza az orvoslistához</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}