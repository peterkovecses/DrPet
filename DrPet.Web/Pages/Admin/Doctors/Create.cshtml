@page
@model DrPet.Web.Pages.Admin.Doctors.CreateModel

<h1>Orvos rögzítése</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Doctor.Name" class="control-label"></label>
                <input asp-for="Doctor.Name" class="form-control" />
                <span asp-validation-for="Doctor.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Doctor.PublicDescription" class="control-label"></label>
                <input asp-for="Doctor.PublicDescription" class="form-control" />
                <span asp-validation-for="Doctor.PublicDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Létrehoz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Vissza az orvoslistához</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}