@page
@model DrPet.Web.Pages.Admin.Consultings.CreateModel

<h1>Rendelési időpont rögzítése</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Consulting.StartOfConsulting" class="control-label"></label>
                <input asp-for="Consulting.StartOfConsulting" class="form-control" />
                <span asp-validation-for="Consulting.StartOfConsulting" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Consulting.EndOfConsulting" class="control-label"></label>
                <input asp-for="Consulting.EndOfConsulting" class="form-control" />
                <span asp-validation-for="Consulting.EndOfConsulting" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Consulting.WorkerId" class="control-label"></label>
                <select asp-for="Consulting.WorkerId" class="form-control" asp-items="Model.Doctors"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Létrehoz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Vissza a rendelési időpontok listájához </a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
