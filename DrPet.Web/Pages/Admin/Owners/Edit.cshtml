@page
@model DrPet.Web.Pages.Admin.Owners.EditModel

<h1>Gazda szerkesztése</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Owner.Id" />

            <div class="form-group">
                <label asp-for="Owner.Name" class="control-label"></label>
                <input asp-for="Owner.Name" class="form-control" />
                <span asp-validation-for="Owner.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Owner.Birthdate" class="control-label"></label>
                <input asp-for="Owner.Birthdate" type="date" max="9999-12-31" class="form-control" />
                <span asp-validation-for="Owner.Birthdate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Owner.Location" class="control-label"></label>
                <input asp-for="Owner.Location" class="form-control" />
                <span asp-validation-for="Owner.Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Owner.Comment" class="control-label"></label>
                <textarea asp-for="Owner.Comment" class="form-control"></textarea>
                <span asp-validation-for="Owner.Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Módosít" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Vissza a gazdák listájához</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
